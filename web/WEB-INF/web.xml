<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>validaUsuario</servlet-name>
        <servlet-class>servers.validaUsuario</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>validaUsuario</servlet-name>
        <url-pattern>/validaUsuario</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>addAlumno</servlet-name>
        <servlet-class>servers.addAlumno</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>addAlumno</servlet-name>
        <url-pattern>/addAlumno</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>addProfesor</servlet-name>
        <servlet-class>servers.addProfesor</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>addProfesor</servlet-name>
        <url-pattern>/addProfesor</url-pattern>
    </servlet-mapping> 
       
    <servlet>
        <servlet-name>addAdministrador</servlet-name>
        <servlet-class>servers.addAdministrador</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>addAdministrador</servlet-name>
        <url-pattern>/addAdministrador</url-pattern>
    </servlet-mapping>
    
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>login.html</welcome-file>
    </welcome-file-list>
</web-app>
